#!/bin/bash

set -e

function real_path {
    [[ ${1} = /* ]] && echo "${1}" || echo "${PWD}/${1#./}"
}

pushd $(dirname $(dirname $(real_path $0)))

if [ -f Berksfile.lock ]; then rm -rf Berksfile.lock; fi
berks install
berks vendor
rm -rf berks-cookbooks/jarbas
ln -s ../cookbooks/jarbas berks-cookbooks/jarbas
popd
